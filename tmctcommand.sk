#ニンジン棒取得コマンド-----------------------------------------------------------------------------------------------------
command /Carrotstick [<text>]:
    permission: Carrotstick.command
    trigger:
        if arg-1 is set:
            if arg-1 is "delete" :
                command "/clear %player% minecraft:carrot_on_a_stick"
                send "&7[&3Carrot&7]&bニンジン付きの棒を削除しました"
            else:
                command "/give %player% minecraft:carrot_on_a_stick{CustomModelData:%arg-1%}"
                send "&7[&3Carrot&7]&bCustmoModelData No.%arg-1%のニンジン付きの棒を付与しました"
        if arg-1 is not set:
            send "&d----------------使用方法・How to use----------------"
            send "&7[&3Carrot&7] &bカスタムモデルデータ付きのニンジン付きの棒"
            send "&7[&3Carrot&7] &b例：/carrot_on_a_stick 1"
            send "&7[&3Carrot&7] &b手元に持っているニンジン付きの棒を削除"
            send "&7[&3Carrot&7] &b例：/carrotstick delete"
            send "&d---------------------------------------------------"



