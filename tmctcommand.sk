#スペクテイターコマンド-----------------------------------------------------------------------------------------------------
command /spectator:
    trigger:
        if {spectatorcomand.%player%} is false:
            if player have 1 emerald:
                set {spectatorcomand.%player%} to true
                remove 1 emerald from player
                broadcast "&7[&3Spectator&7] &d%player%&bがスペクテイターコマンドを使用しました"
                set {start.spectator.%player%} to location of player
                send "&7[&3Spectator&7] &bスペクテイターのスタート地点を保存しました"
                set player's gamemode to spectator
                set {spectatorseconds.%player%} to 30
                loop 31 time:
                    wait 1 seconds
                    set action bar of player to "残り時間 : %{spectatorseconds.%player%}% 秒"
                    remove 1 from {spectatorseconds.%player%}
                teleport player to {start.spectator.%player%}
                set player's gamemode to survival
                set {spectatorcomand.%player%} to false
                stop
            else:
                send "&7[&3Spectator&7] &bおやおや？ &dエメラルド &bを持っていないようです"
                stop
        if {spectatorcomand.%player%} is not set:
            set {spectatorcomand.%player%} to false
            stop
        if {spectatorcomand.%player%} is true:
            send "&7[&3Spectator&7] &b連続で使用しないでね ^^;"




#死亡位置確認コマンド-----------------------------------------------------------------------------------------------------
on death of player:
    set {deathlocation.%player%} to location of player
    send "&7[&3Deathlocation&7]&bあなたの死亡位置を記録しました"
    send "&7[&3Deathlocation&7]&b&7[/deathlocation&7]で確認できます"


command /Deathlocation:
    trigger:
        if {deathlocation.%player%} is set:
            send "&7[&3Deathlocation&7]&bあなたが前回死亡した位置は&d%{deathlocation.%player%}%&bです"
        else:
            send "&7[&3Deathlocation&7]&bあなたは死亡していません"



